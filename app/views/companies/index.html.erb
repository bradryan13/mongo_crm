<h1>MongoCRM</h1>
<h2>Companies Contacts</h2>
<p><%= link_to "Add a new company", new_company_path %></p>
<ul>
  <%= render @companies %>
</ul>

<h3>Personal Contacts</h3>
<p><%= link_to "add a personal contact", new_company_contact_path(@no_company) %></p>
<ul>
  <% @no_company.contacts.each do |c| %>
  <li><%= link_to c, contact_path(c) %></li>
  <% end %>
</ul>
